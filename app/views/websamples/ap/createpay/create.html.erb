<body>
        <div id="jive-wrapper">
            <div id="jive-header">
                <div id="logo">
                    <span style="float: right; height: 30px;">Login to <a href="https://developer.paypal.com">PayPal sandbox</a></span>
                    <a title="Paypal X Home" href="#" id="web_pageheader_anchor_index"><%= image_tag 'paypal_x_logo.gif', :alt => 'Paypal X',:border=>'0', :height=>'28' %></a>
                </div>
            </div><h1>&nbsp;</h1>
        </div>
<%= render :partial => "layouts/menu" %>

<div id="request_form">

<center>
	<h3><b> &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp;  Adaptive Payments - Create Pay</b></h3>
		<a onclick="PrePopulate()"><span>Populate default values</span></a>
				</center>
				<br/>

<%= form_tag(createpay_path, :method=>'post', :multipart => true, :id => 'Form1', :name => 'Form1') do %>
 
<table  align="center">
	<tr>
 		<td><label for="email">Sender's Email:</label></td>
		<td><%= text_field_tag( "email", value='',:size => 75) %> </td>
	</tr>
	<tr>
 		<td>currencyCode:</td><td><%=currency_select_for(:createpay) %></td>
	</tr>
	<tr>
 		<td><label for="preapprovalkey">Preapproval Key:</label></td>
		<td><%= text_field_tag( "preapprovalkey", value = '',:size => 50) %> </td>
	</tr>
	<tr>
 		<td><label for="actionType">Action Type:</label></td>
		<td><%= text_field_tag( "actionType", value = '',:size => 50) %> </td>
	</tr>
	<tr>
 		<td colspan="3"><p align="center"><b>Pay Details</b></p></td>
	</tr> 
	<tr>
		<td><label for="payee">Payee</label></td>
		<td><label for="receiveremail_0">ReceiverEmail (Required):</label></td>
		<td><label for="amount[0]">Amount (Required):</label></td>
	</tr>
	<tr>
		<td>1</td>
		<td><%= text_field_tag( "receiveremail_0", value = '',:size => 75 ) %> </td>
		<td><%= text_field_tag( "amount_0", value = '',:size => 5 ) %> </td>

	</tr>
	<tr>
		<td>2</td>
		<td><%= text_field_tag( "receiveremail_1", value = '',:size => 75) %> </td>
		<td><%= text_field_tag( "amount_1", value = '',:size => 5 ) %> </td>

	</tr> 
 
	<tr>
	</tr>
</table>
<table align="center">
	<tr>
		<td align="center">
      	 <a class="pop-button primary" onclick="Form1.submit();" id="Submit"><span>Submit</span></a>
		</td>
	</tr>
	
</table>
</div>
</body>
</html>
<% end %>
