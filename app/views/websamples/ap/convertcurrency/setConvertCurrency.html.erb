<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
<title>Convert Currency</title>
<%= stylesheet_link_tag "style"%>

<script type="text/javascript">
function PrePopulate()
{
	document.getElementById('baseAmmount_0').value = "1.00";
	document.getElementById('baseCurrency_0').value = "GBP";
	document.getElementById('baseAmmount_1').value = "100.00";
	document.getElementById('baseCurrency_1').value = "EUR";
	document.getElementById('toCode_0').value = "USD";
	document.getElementById('toCode_1').value = "CAD";
	document.getElementById('toCode_2').value = "JPY";
}
</script>
</head>
<body>
        <div id="jive-wrapper">
            <div id="jive-header">
                <div id="logo">
                    <span style="float: right; height: 30px;">Login to <a href="https://developer.paypal.com">PayPal sandbox</a></span>
                    <a title="Paypal X Home" href="#" id="web_pageheader_anchor_index"><%= image_tag 'paypal_x_logo.gif', :alt => 'Paypal X',:border=>'0', :height=>'28' %></a>
                </div>
            </div><h1>&nbsp;</h1>
        	</div>
<%= render :partial => "layouts/menu" %>

<div id="request_form">
<center>
<h3><b> &nbsp;&nbsp; Adaptive Payments - Convert Currency</b></h3>
<a onclick="PrePopulate()"><span>Populate default values</span></a>
</center>
<br/>

<%  form_tag (convertCurrency_path, :method=>'post', :multipart => true, :id => 'Form1', :name => 'Form1') do %>
<table  align="center">
      <tr>
		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;  ConversionDetails</td>
		<td>Amount(Required):</td>
		<td>FromCurrencyCode(Required):</td>
      </tr>
	<tr>
		<td align="center">1</td>
		<td><%= text_field_tag( "baseAmmount_0", value = '',:size => 20) %> </td>
		<td><%= text_field_tag( "baseCurrency_0", value = '',:size => 20) %> </td>
	</tr>
	<tr>
		<td align="center">2</td>
		<td><%= text_field_tag( "baseAmmount_1", value = '',:size => 20) %> </td>
		<td><%= text_field_tag( "baseCurrency_1", value = '',:size => 20) %> </td>
	</tr>
      <tr>
		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;  convertToCurrencyList</td>
		<td>&nbsp;&nbsp; &nbsp;&nbsp; ToCurrencyCode(Required):</td>
      </tr>
	<tr>
		<td align="center">1</td>
		<td><%= text_field_tag( "toCode_0", value = '',:size => 20) %> </td>
	</tr>
	<tr>
		<td align="center">2</td>
		<td><%= text_field_tag( "toCode_1", value = '',:size => 20) %> </td>
	</tr>
	<tr>
		<td align="center">3</td>
		<td><%= text_field_tag( "toCode_2", value = '',:size => 20) %> </td>
	</tr>
	<tr>
	</tr>
</table>
<table align="center">
	<tr>
      	<td align="center"><a class="pop-button primary" onclick="Form1.submit();" id="Submit"><span>Submit</span></a>
</td>
	</tr>
	
</table>
</div>
</body>
</html>
<%end%>
