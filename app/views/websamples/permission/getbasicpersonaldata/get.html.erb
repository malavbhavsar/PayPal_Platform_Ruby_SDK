<html xmlns="http://www.w3.org/1999/xhtml" >
	<head>
		<title>GetBasicPersonalData</title>
		<%= stylesheet_link_tag "style"%>
	</head>
	<body>
		<div id="jive-wrapper">
			<div id="jive-header">
				<div id="logo">
					<span style="float: right; height: 30px;"> Login to <a href="https://developer.paypal.com">PayPal sandbox</a> </span>
					<a title="Paypal X Home" href="#" id="web_pageheader_anchor_index"><%= image_tag 'paypal_x_logo.gif', :alt => 'Paypal X',:border=>'0', :height=>'28' %></a>
				</div>
			</div>
			<h1>&nbsp;</h1>
		</div>
		<%= render :partial => "layouts/menu" %>
		<div id="request_form">
			<h3 align="center">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Permissions-GetBasicPersonalData</h3>
			<%=  form_tag (getbasicpersonaldata_path, :method=>'post', :multipart => true, :id => 'Form1', :name => 'Form1') do %>
			<table  align="center">
				<tr>
					<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;Basic Attributes:</td>
					<td> <%= check_box_tag("attr[]", value = "http://axschema.org/namePerson/first") %>FirstName
					<br>
					<%= check_box_tag("attr[]", value = "http://axschema.org/namePerson/last") %>LastName
					<br>
					<%= check_box_tag("attr[]", value = "http://axschema.org/contact/email") %>Mail
					<br>
					<%= check_box_tag("attr[]", value = "http://schema.openid.net/contact/fullname") %>Full Name
					<br>
					<%= check_box_tag("attr[]", value = "http://axschema.org/company/name") %>Business Name
					<br>
					<%= check_box_tag("attr[]", value = "http://axschema.org/contact/country/home") %>Country Code
					<br>
					<%= check_box_tag("attr[]", value = "https://www.paypal.com/webapps/auth/schema/payerID") %>PayerId
					<br>
					</td>
				</tr>
				<tr>
					<td><%= @tst%></td>
				</tr>
				<tr></tr>
			</table>
			<table align="center">
				<tr>
					<td align="center"><a class="pop-button primary" onclick="Form1.submit();" id="Submit"> <span>Submit</span> </a></td>
				</tr>
			</table>
			<%end%>
		</div>
	</body>
</html>
