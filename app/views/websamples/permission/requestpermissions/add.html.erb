<html xmlns="http://www.w3.org/1999/xhtml" >
	<head>
		<title>Request Permissions</title>
		<%= stylesheet_link_tag "style"%>
	</head>
	<body>
		<div id="jive-wrapper">
			<div id="jive-header">
				<div id="logo">
					<span style="float: right; height: 30px;">
						Login to
						<a href="https://developer.paypal.com">PayPal sandbox</a>
					</span>
					<a title="Paypal X Home" href="#" id="web_pageheader_anchor_index"><%= image_tag 'paypal_x_logo.gif', :alt => 'Paypal X',:border=>'0', :height=>'28' %></a>
				</div>
			</div>
			<h1>&nbsp;</h1>
		</div>
		<%= render :partial => "layouts/menu" %>

		<div id="request_form">
			<h3 align="center">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Permissions-RequestPermission</h3>
			<%=  form_tag(requestpermissions_path, :method=>'post', :multipart => true, :id => 'Form1', :name => 'Form1') do %>
			<table  align="center">
				<tr>
					<td>
					&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;
					<label for="callback">
						callback:
					</label>
					</td>
					<td> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= text_field_tag( "callback", value = @callback,:size => 75) %> </td>
				</tr>
				<tr>
				</tr>
				<tr>
					<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; Scope:</td>
					<td>
					<%= check_box_tag("scope[]", value = "EXPRESS_CHECKOUT", checked = false) %>EXPRESS_CHECKOUT
					<br>
					<%= check_box_tag("scope[]", value = "DIRECT_PAYMENT", checked = false) %>DIRECT_PAYMENT
					<br>
					<%= check_box_tag("scope[]", value = "AUTH_CAPTURE", checked = false) %>AUTH_CAPTURE
					<br>
					<%= check_box_tag("scope[]", value = "MOBILE_CHECKOUT", checked = false) %>MOBILE_CHECKOUT
					<br>
					<%= check_box_tag("scope[]", value = "AIR_TRAVEL", checked = false) %>AIR_TRAVEL
					<br>
					<%= check_box_tag("scope[]", value = "TRANSACTION_SEARCH", checked = false) %>TRANSACTION_SEARCH
					<br>
					<%= check_box_tag("scope[]", value = "RECURRING_PAYMENTS", checked = false) %>RECURRING_PAYMENTS
					<br>
					<%= check_box_tag("scope[]", value = "ACCOUNT_BALANCE", checked = false) %>ACCOUNT_BALANCE
					<br>
					<%= check_box_tag("scope[]", value = "ENCRYPTED_WEBSITE_PAYMENTS", checked = false) %>ENCRYPTED_WEBSITE_PAYMENTS
					<br>
					<%= check_box_tag("scope[]", value = "REFUND", checked = false) %>REFUND
					<br>
					<%= check_box_tag("scope[]", value = "BILLING_AGREEMENT", checked = false) %>BILLING_AGREEMENT
					<br>
					<%= check_box_tag("scope[]", value = "REFERENCE_TRANSACTION", checked = false) %>REFERENCE_TRANSACTION
					<br>
					<%= check_box_tag("scope[]", value = "MASS_PAY", checked = false) %>MASS_PAY
					<br>
					<%= check_box_tag("scope[]", value = "TRANSACTION_DETAILS", checked = false) %>TRANSACTION_DETAILS
					<br>
					<%= check_box_tag("scope[]", value = "NON_REFERENCED_CREDIT", checked = false) %>NON_REFERENCED_CREDIT
					<br>
					<%= check_box_tag("scope[]", value = "SETTLEMENT_CONSOLIDATION", checked = false) %>SETTLEMENT_CONSOLIDATION
					<br>
					<%= check_box_tag("scope[]", value = "SETTLEMENT_REPORTING", checked = false) %>SETTLEMENT_REPORTING
					<br>
					<%= check_box_tag("scope[]", value = "BUTTON_MANAGER", checked = false) %>BUTTON_MANAGER
					<br>
					<%= check_box_tag("scope[]", value = "MANAGE_PENDING_TRANSACTION_STATUS", checked = false) %>MANAGE_PENDING_TRANSACTION_STATUS
					<br>
					<%= check_box_tag("scope[]", value = "RECURRING_PAYMENT_REPORT", checked = false) %>RECURRING_PAYMENT_REPORT
					<br>
					<%= check_box_tag("scope[]", value = "EXTENDED_PRO_PROCESSING_REPORT", checked = false) %>EXTENDED_PRO_PROCESSING_REPORT
					<br>
					<%= check_box_tag("scope[]", value = "EXCEPTION_PROCESSING_REPORT", checked = false) %>EXCEPTION_PROCESSING_REPORT
					<br>
					<%= check_box_tag("scope[]", value = "ACCOUNT_MANAGEMENT_PERMISSION", checked = false) %>ACCOUNT_MANAGEMENT_PERMISSION
					<br>
					<%= check_box_tag("scope[]", value = "INVOICING", checked = false) %>INVOICING
					<br>
					<%= check_box_tag("scope[]", value = "ACCESS_BASIC_PERSONAL_DATA", checked = false) %>ACCESS_BASIC_PERSONAL_DATA
					<br>
					<%= check_box_tag("scope[]", value = "ACCESS_ADVANCED_PERSONAL_DATA", checked = false) %>ACCESS_ADVANCED_PERSONAL_DATA
					<br>
					</td>
				</tr>
				<tr>
					<td><%= @tst%></td>
				</tr>
				<tr>
				</tr>
			</table>
			<table align="center">
				<tr>
					<td align="center">
					<a class="pop-button primary" onclick="Form1.submit();" id="Submit">
					<span>Submit</span>
					</a>
					</td>
				</tr>
			</table>
			<%end%>
		</div>
	</body>
</html>
