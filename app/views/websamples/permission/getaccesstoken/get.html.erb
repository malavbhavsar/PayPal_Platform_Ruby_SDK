<html xmlns="http://www.w3.org/1999/xhtml" >
<head>
<title>Get Access Token</title>
<%= stylesheet_link_tag "style"%>
</head>

<body>
        <div id="jive-wrapper">
            <div id="jive-header">
                <div id="logo">
                    <span style="float: right; height: 30px;">Login to <a href="https://developer.paypal.com">PayPal sandbox</a></span>
                    <a title="Paypal X Home" href="#" id="web_pageheader_anchor_index"><%= image_tag 'paypal_x_logo.gif', :alt => 'Paypal X',:border=>'0', :height=>'28' %></a>
                </div>
            </div><h1>&nbsp;</h1>
        </div>
<%= render :partial => "layouts/menu" %>

<div id="request_form">
<h3 align="center">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Permissions-GetAccessToken</h3>
  <%=  form_tag (accesstoken_path, :method=>'post', :multipart => true, :id => 'Form1', :name=>'Form1') do %>
<table  align="center">
	<tr>
 		<td><label for="token">Request Token:</label></td><td>
<%= text_field_tag( "token", value = "",:size => 80) %>
</td>
	</tr>
	<tr>
 		<td><label for="verifier">Verifier:</label></td><td>
<%= text_field_tag( "verifier", value = "",:size => 80) %>
</td>
	</tr>
	<tr>
 		<td><label for="subjectAlias">subjectAlias: (optional)</label></td>
		<td>
			<%= text_field_tag( "subjectAlias", value = "",:size => 80) %>
		</td>
	</tr>
<tr></tr>
</table>
<table align="center">
	<tr>
      	<td align="center"><a class="pop-button primary" onclick="Form1.submit();" id="Submit"><span>Submit</span></a>
</td>
	</tr>
	
</table>
<%end%>
</div>
</body>
</html>